<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.se.travezeandroid.view_rooms"
    tools:showIn="@layout/activity_view_rooms">

    <TextView
        android:id="@+id/hotel_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/Hotelname"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/room_status1"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="37dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_num"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:text="@string/roomNo"
        app:layout_constraintBaseline_toBaselineOf="@+id/room_type"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/hotel_name" />

    <TextView
        android:id="@+id/room_type"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="107dp"
        android:text="@string/roomType"
        app:layout_constraintLeft_toLeftOf="@+id/room_num"
        app:layout_constraintRight_toRightOf="@+id/room_status1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/room_status"
        android:layout_width="76dp"
        android:layout_height="33dp"
        android:layout_marginEnd="36dp"
        android:text="@string/Status"
        app:layout_constraintBaseline_toBaselineOf="@+id/room_type"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="DuplicateIds"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/room_no1"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:text="@string/roomNo"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/room_num"
        app:layout_constraintBaseline_toBaselineOf="@+id/room_type1"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/room_num" />

    <TextView
        android:id="@+id/room_type1"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:text="@string/roomType"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/room_type"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/room_type"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/room_type" />

    <TextView
        android:id="@+id/room_status1"
        android:layout_width="78dp"
        android:layout_height="41dp"
        android:text="@string/Status"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="36dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/room_type1"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Back"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="138dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="94dp" />

</android.support.constraint.ConstraintLayout>
